  <view class="img_big" hover-class="none" hover-stop-propagation="false">
    <image class="" src="{{userInfo.avatarUrl}}" mode="widthFix" lazy-load="false"/>
  </view>
  <view class="img_sm" hover-class="none" hover-stop-propagation="false">
