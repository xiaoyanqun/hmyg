page {
  background-color: #edecea;
}
.user_info {
  position: relative;
  height: 45vh;
  overflow: hidden;
}
.user_info .img_big image {
  filter: blur(10px);
}
.user_info .img_sm {
  left: 50%;
  top: 30%;
  transform: translateX(-50%);
  z-index: 1;
  position: absolute;
  width: 160rpx;
  height: 160rpx;
  color: #fff;
  text-align: center;
}
.user_info .img_sm .nickName {
  margin-top: 50rpx;
}
.user_info .img_sm image {
  border-radius: 50%;
}
.user_util {
  background-color: #fff;
  position: absolute;
  width: 90vw;
  left: 50%;
  top: 40%;
  transform: translateX(-50%);
}
.user_util .util_item {
  border-bottom: 24rpx solid #edecea;
}
.user_util .util_collect {
  padding: 10rpx;
  display: flex;
}
.user_util .util_collect .collect_item {
  flex: 1px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.user_util .util_collect .collect_item view {
  color: var(--themeColor);
}
.user_util .myForm .myForm_title {
  padding: 15rpx;
  border-bottom: 1rpx solid #dedede;
}
.user_util .myForm .myForm_info {
  display: flex;
}
.user_util .myForm .myForm_info .myForm_info_item {
  padding: 15rpx 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}
.user_util .myForm .myForm_info .myForm_info_item .iconfont {
  color: var(--themeColor);
  font-size: 40rpx;
}
